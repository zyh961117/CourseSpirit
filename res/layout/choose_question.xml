<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/top1_bg"
	    android:paddingLeft="12dp"
	    android:paddingRight="12dp" >
    
	 	<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:src="@drawable/actionbar_icon" />
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="12dp"
	            android:text="课堂精灵"
	            android:textColor="#d3d3d3"
	            android:textSize="18sp" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:src="@drawable/actionbar_search_icon" />
	
	        <Button
	            android:id="@+id/id_add_question_btn"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:background="@drawable/actionbar_add_icon" />
	
	        <Button
	            android:id="@+id/id_refresh_question_btn"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:background="@drawable/actionbar_refresh_icon" />
	    </LinearLayout>
	    
	</RelativeLayout>
    
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#484E61" >
		<TextView
			android:id="@+id/title_course"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textColor="#fff"
			android:textSize="24sp" />
	</RelativeLayout>
	
	<ListView
		android:id="@+id/list_question"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >
	</ListView>
</LinearLayout>